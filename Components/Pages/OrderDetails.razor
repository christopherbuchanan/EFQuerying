@page "/orderdetails"
@using Microsoft.EntityFrameworkCore
@inject RetailContext DbContext

<h2>Order Details</h2>

@if (orderDetails == null)
{
    <p><em>Loading...</em></p>
}
else if (orderDetails.Count == 0)
{
    <p>No order details found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Detail ID</th>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in orderDetails)
            {
                <tr>
                    <td>@detail.OrderDetailID</td>
                    <td>@detail.OrderID</td>
                    <td>@detail.Order.Customer.Name</td>
                    <td>@detail.Order.Customer.Email</td>
                    <td>@detail.Product.Name</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.UnitPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<OrderDetail> orderDetails;

    protected override async Task OnInitializedAsync()
    {
        throw new NotImplementedException("Retrieve a list of all order details, with customer name and email.");
    }
}  